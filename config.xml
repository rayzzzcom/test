<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rayzzz.rayz" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Визитка</name>
    <description>
        Пример визитки компании.
    </description>
    <author email="rayzexpert@gmail.com" href="http://rayzzz.com">
        Alexander Levitskiy
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-fullscreen" spec="1" />
    <plugin name="cordova-plugin-globalization" spec="1" />
    <plugin name="cordova-plugin-screen-orientation" spec="1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="1" />
    <plugin name="phonegap-plugin-push" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<feature name="SocialSharing">
	  <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
	</feature>
	<feature name="Launcher">
		<param name="android-package" value="com.hutchind.cordova.plugins.launcher.Launcher" />
	</feature>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
